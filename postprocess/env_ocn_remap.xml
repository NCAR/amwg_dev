<!-- ======================================================================= -->
       
<!-- Description: Full path to matrix 2d file --> 
<entry id="OCNREMAP_matrix_2d_fname" value="$POSTPROCESS_PATH/ocean_remap/ocean_remap/POP_gx1v7_to_latlon_1x1_0E_mask_conserve_20181015.nc" />
       
<!-- Description: Full path to matrix 3d file --> 
<entry id="OCNREMAP_matrix_3d_fname" value="$POSTPROCESS_PATH/ocean_remap/ocean_remap/POP_gx1v7_to_latlon_1x1_0E_fulldepth_conserve_20181015.nc" />
       
<!-- Description: Full path to a text file that contains per line MIP_TABLE:VARNAME.  This list and the data path can be pieced together to find all files to be regridded. --> 
<entry id="OCNREMAP_cmip6" value="$POSTPROCESS_PATH/ocean_remap/ocean_remap/ocn_vars.txt" />
       
<!-- Description: Full path to a text file that contains a full path file name per line that needs to be regridded. --> 
<entry id="OCNREMAP_filelist" value="$POSTPROCESS_PATH/ocean_remap/ocean_remap/file_list.txt" />
       
<!-- Description: Full path to a base directory to find files to regrid.  All files with the *.nc found under this path will be regridded, unless restricted with the OCNREMAP_cmip6 or OCNREMAP_filelist options. --> 
<entry id="OCNREMAP_indir" value="/glade/collections/cdg/cmip6/[case_id]" />
       
<!-- Description: Full path to a output directory (base directory if CMIP6) --> 
<entry id="OCNREMAP_outdir" value="/glade/collections/cdg/cmip6/[case_id]" />
       
<!-- Description: The amount of time slices to operate on at once. --> 
<entry id="OCNREMAP_chunk" value="10" />
       
    
  
    
  
    
  

